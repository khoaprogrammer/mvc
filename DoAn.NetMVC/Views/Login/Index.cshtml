@model DoAn.NetMVC.Models.TaiKhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Contents/CSS/Login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
</head>
<body>
    <div class="login-page">
        <div class="form">
            @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "register-form" }))
            {
                @Html.TextBoxFor(x => x.MaNguoiDung, new { @type = "text", @placeholder = "tên đăng nhập" })
                @Html.TextBoxFor(x => x.MatKhau, new { @type = "password", @placeholder = "mật khẩu" })
                @Html.TextBoxFor(x => x.Email, new { @type = "text", @placeholder = "email" })
                <span class="message" style="color:red">@ViewBag.ErrorMessage</span><br />
                <button>Đăng ký</button>
                <p class="message">Đã có tài khoản? <a href="#">Đăng nhập</a></p>
            }

            @using (@Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.TextBoxFor(x => x.MaNguoiDung, new { @type = "text", @placeholder = "tên đăng nhập" })
                @Html.TextBoxFor(x => x.MatKhau, new { @type = "password", @placeholder = "mật khẩu" })
                <span class="message" style="color:red">@ViewBag.ErrorMessage</span><br />
                <button>Đăng nhập</button>
                <p class="message">Chưa có tài khoản? <a href="#">Đăng ký ngay</a></p>
            }
        </div>
    </div>

    <script>
        $('.message a').click(function () {
            $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });
        @if (ViewBag.IsRegistering != null && ViewBag.IsRegistering)
        {
            <text> $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");</text>
        }
    </script>
</body>
</html>
